<head>
    <link rel="stylesheet" href="/css/style.css">

</head>

<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-3">


            <h3><%= singleListing.title %> </h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%= singleListing.image.url %>" class="card-img-top show-img" alt="listing-image">
            <div class="card-body">
                <p class="card-text">
                
                    </b> <br>
                    <%= singleListing.description %> <br>
                        &#8377; <%= singleListing.price.toLocaleString("en-IN") %> <br>
                            <%= singleListing.location %> <br>
                                <%= singleListing.country %>
                </p>
            </div>
        </div>


    </div>


    <div class="btns">

        <a href="/listings/<%= singleListing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>



        <form method="post" action="/listings/<%= singleListing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-5 ">DELETE</button>
        </form>
    </div>

    <div class="col-8 offset-3"> 
        <hr>
        <h4>Leave a Review</h4>

        <form class="col-8 mb-3"> 
            <div class="mb-3 mt-3"> 
                <label for="rating" class="form-label"> Rating </label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>