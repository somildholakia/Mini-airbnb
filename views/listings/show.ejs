<head>
    <link rel="stylesheet" href="/css/style.css">

</head>

<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-3">


            <h3>Listing Deatils: </h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%= singleListing.image.url %>" class="card-img-top show-img" alt="listing-image">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%= singleListing.title %>
                    </b> <br>
                    <%= singleListing.description %> <br>
                        &#8377; <%= singleListing.price.toLocaleString("en-IN") %> <br>
                            <%= singleListing.location %> <br>
                                <%= singleListing.country %>
                </p>
            </div>
        </div>


    </div>


    <div class="btns">

        <a href="/listings/<%= singleListing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>



        <form method="post" action="/listings/<%= singleListing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-5 ">DELETE</button>
        </form>
    </div>